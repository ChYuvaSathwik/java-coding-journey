package com.sathwik.first;
import java.util.*;
public class FirstProgram{
	public static void main(String [] args) {
		Scanner sc=new Scanner(System.in);
		int sathwik=sc.nextInt();
		int even=0;
		int odd=0;
		int [] balu=new int[sathwik];
		for(int i=0;i<sathwik;i++) {
			balu[i]=sc.nextInt();
		}
		for(int j=0;j<sathwik;j++) {
			if (balu[j]%2==0) {
				even=even+1;
				
			}
			else {
				odd=odd+1;
			}
		}
		System.out.println(even);
		System.out.println(odd);
	}
	}
