class Solution {
    public boolean isPalindrome(String s) {
        String [] sathwik=s.split(" ");
        String hi="";
        String ok="";
        String balu="";
        for(String new1:sathwik){
            hi=hi+new1;
        }
        for(char h:hi.toCharArray()){
            if(Character.isLetterOrDigit(h)){
                ok=ok+h;
            }
        }
        String ty=ok.toLowerCase();

        for(int i=ty.length()-1;i>=0;i--){
            balu=balu+ty.charAt(i);
        }
        if(ty.equals(balu)){
            return true;
        }
        else{
            return false;
        }


        }


        }
